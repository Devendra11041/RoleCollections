<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns="sap.m"
>
<Dialog
        id="idCreateEMployeeDialog"
        resizable="true"
        draggable="true"
        contentWidth="30%"
        title="Create Employee"
    >
 <beginButton>
            <Button
                id="idBtnCreate1"
                text="Create"
                press="onCreateEmployee"
                type="Success"
            />
        </beginButton>
        <endButton>
            <Button
                id="idCancelButton1"
                text="Cancel"
                press="onCloseDialog"
                type="Negative"
            />
        </endButton>
<content>

     <form:SimpleForm
                                id="idEmployeeDetailsForm"
                                editable="false"
                                layout="ColumnLayout"
                                columnsM="2"
                                columnsL="3"
                                columnsXL="4"

                            >
                                <Label
                                    id="idNameLabel"
                                    text="Name"
                                />
                                <Input
                                    id="idNameInput"
                                    value="{localModel>fName}"
                                />
                                                                <Label
                                    id="idLastNameLabel"
                                    text="LastName"
                                />
                                <Input
                                    id="idLastNameInput"
                                    value="{localModel>lName}"
                                />
                                                               <Label
                                    id="idGenderLabel"
                                    text="Gender"
                                />
                                <Input
                                    id="idGenderInput"
                                    value="{localModel>gender}"
                                />

                                                                <Label
                                    id="idContractedStaredLabel"
                                    text="ContractDate"
                                />
                                <Input
                                    id="idContractStartedInput"
                                    value="{localModel>lName}"
                                />
                             
                                <Label
                                    id="idEmailLabel"
                                    text="Email"
                                />
                                <Input
                                    id="idEmailInput"
                                    value="{localModel>email}"
                                />
                                <Label
                                    id="idPhoneLabel"
                                    text="Phone"
                                />
                                <Input
                                    id="idPhoneInput"
                                    value="{localModel>phone}"
                                />
                            </form:SimpleForm>
                            </content>
    </Dialog>
</core:FragmentDefinition>