<mvc:View
    xmlns:f="sap.f"
    controllerName="com.app.employeedetails.controller.Home"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
    <f:DynamicPage
        id="idEmployeeListPage"
        headerExpanded="true"
    >
        <f:title>
            <f:DynamicPageTitle id="idEmployeeListPageTitle">
                <f:heading>
                    <Title
                        id="idEmployeePageHeadingTitle"
                        text="{i18n>title}"
                    />
                </f:heading>

                <f:expandedContent>
                    <Label
                        id="idEmployeeListPageECL"
                        text="{i18n>SubTitle}"
                    />
                </f:expandedContent>
                <f:snappedContent>
                    <Label
                        id="idEmployeeListPageESL"
                        text="{i18n>SubTitle}"
                    />
                </f:snappedContent>
                <f:snappedTitleOnMobile>
                    <Title
                        id="idEmployeeListPageEST"
                        text="{i18n>SubTitle}"
                    />
                </f:snappedTitleOnMobile>
                <f:navigationActions>
                    <Button
                        id="idBtnFullScreen"
                        icon="sap-icon://full-screen"
                        type="Transparent"
                    />
                    <Button
                        id="idBtnDecline"
                        icon="sap-icon://decline"
                        type="Transparent"
                    />
                </f:navigationActions>
            </f:DynamicPageTitle>
        </f:title>
        <f:header>
            <f:DynamicPageHeader
                id="idDynamicPageHeader"
                pinnable="true"
            >
                <Text text="TODO Filters will be placed Here" />
            </f:DynamicPageHeader>
        </f:header>
        <f:content>
            <Table
                id="EmployeeTable"
                mode="SingleSelectMaster"
                alternateRowColors="true"
                items="{/Employee}"
            >
                <headerToolbar>
                    <OverflowToolbar id="idEmployeeTableHeader">
                        <Title
                            id="idTableHeaderTitle"
                            text="Employees"
                        />
                        <ToolbarSpacer id="idTableHeaderSpacer" />
                        <Button
                            id="idBtnCreate"
                            icon="sap-icon://add"
                            tooltip="Create Employee"
                            type="Success"
                        />
                        <Button
                            id="idBtnDelete"
                            icon="sap-icon://delete"
                            tooltip="Delete Employee"
                            type="Negative"
                        />                        
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                    <Column id="idNameCol">
                        <Title
                            id="idNameColTitle"
                            text="Name"
                        />
                    </Column>
                    <Column id="idGenderCol">
                        <Title
                            id="idGenderColTitle"
                            text="Gender"
                        />
                    </Column>
                    <Column id="idDOBCol">
                        <Title
                            id="idDOBColTitle"
                            text="Date Of Birth"
                        />
                    </Column>
                    <Column id="idEmailCol">
                        <Title
                            id="idEmailColTitle"
                            text="Email"
                        />
                    </Column>
                    <Column id="idPhoneCol">
                        <Title
                            id="idPhoneColTitle"
                            text="Phone Number"
                        />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem id="idEmployeeTableColListItem">
                        <cells>
                            <Text
                                id="idNameColValue"
                                text="{fName} {lName}"
                            />
                            <Text
                                id="idGenderColValue"
                                text="{gender}"
                            />
                            <Text
                                id="idDOBColValue"
                                text="{DOB}"
                            />
                            <Text
                                id="idEmailColValue"
                                text="{email}"
                            />
                            <Text
                                id="idPhoneColValue"
                                text="{phone}"
                            />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </f:content>
    </f:DynamicPage>
</mvc:View>
